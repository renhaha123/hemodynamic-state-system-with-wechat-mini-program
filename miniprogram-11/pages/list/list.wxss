/* pages/list/list.wxss */
.container {
  padding: 10rpx;
  background-color: #f5f5f5;
  justify-content: center;
  align-items: center;
}
.detailModel{
  position: fixed;
  top: 0;
  height: 100%;
  overflow-y: auto;
  background-color: rgba(0, 0, 0, 0.5);
  /* display: flex; */
  padding: 10rpx;
}
.detailContent{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: white;
  padding: 4rpx;
  width: 99.5%;
}
.detailHeader{
  display: grid;
  grid-template-columns: 200rpx 180rpx 320rpx;
  grid-template-rows: 40rpx;
  padding: 6rpx;
}
.detailUser{
  display: grid;
  grid-template-columns: 240rpx 240rpx 240rpx;
  grid-template-rows: 60rpx 60rpx 60rpx;
  border: 2rpx solid black;
  border-bottom: transparent;
  padding: 3rpx;
}
.allIndex{
  display: grid;
  grid-template-columns: 300rpx 120rpx 80rpx 66rpx 158rpx;
  grid-template-rows: repeat(24,60rpx);
  border: 2rpx solid black;
  padding: 3rpx;
}
.text_image{
  width: 20rpx;
  height: 40rpx;
}

.detailContent_button{
  background-color: white;
  color: #88b5f5;
}
.record-item {
  background-color: white;
  border-radius: 10rpx;
  border: 2px solid #e2e8f0;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: 80%;
}
.record-item text {
  display: block;
  margin-bottom: 20rpx;
}
.no-data {
  text-align: center;
  color: #999999;
  margin-top: 100rpx;
}
.record-list_text{
  margin-bottom: 16rpx;
  font-size: 33rpx;
  font-weight: bold;
  display: block;
  justify-content: center;
}
