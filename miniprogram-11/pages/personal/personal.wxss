.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.modelContent_button{
  background-color: #88b5f5;
  color: white;
  margin-top: 10px;
  color: white;
}

.record-list {
  width: 90%;
}
.record-item {
  border: 1rpx solid #eeeeee;
  padding: 30rpx;
  border-radius: 5rpx;
  margin-bottom: 30rpx;
}
.record-item text {
  display: block;
  margin-bottom: 10rpx;
}

.revise_container{
  padding: 10rpx;
  background-color: #f5f5f5;
}

.revise_container{
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.revise_container_text{
  font-weight: bold;
  margin-bottom: 10rpx;
}
